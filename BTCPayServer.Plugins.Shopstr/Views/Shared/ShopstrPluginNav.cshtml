@using BTCPayServer.Abstractions.Contracts
@using BTCPayServer.Abstractions.Extensions
@using BTCPayServer.Plugins.Shopstr.Views
@using Microsoft.AspNetCore.Mvc.TagHelpers

@inject IScopeProvider ScopeProvider
@{
    var storeId = ScopeProvider.GetCurrentStoreId();
}
@if (!string.IsNullOrEmpty(storeId))
{
 <ul class="navbar-nav">
    <li class="nav-item">
        <a asp-controller="ShopstrPlugin" asp-action="Index" asp-route-storeId="@storeId" class="nav-link @ViewData.IsActivePage(PluginNavPages.Index)">
            <img src="/Resources/img/Shopstr.svg" width="24" height="24" class="icon"/>&nbsp;
            <span>Shopstr</span>
        </a>
    </li>
</ul>
}