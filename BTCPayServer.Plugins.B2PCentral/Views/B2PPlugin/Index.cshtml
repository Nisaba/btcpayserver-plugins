@functions {
    string GetCategoryIcon(CryptoCategory category) => category switch
    {
        CryptoCategory.Altcoin => "🪙",
        CryptoCategory.StablecoinUSD => "💵",
        CryptoCategory.StablecoinEUR => "💶",
        _ => "💰"
    };

    string GetCryptoIcon(string cryptoCode) => cryptoCode switch
    {
        "BTC" => "₿",
        "BCH" => "₿",
        "L-BTC" => "₿",
        "ETH" => "Ξ",
        "XMR" => "ɱ",
        "LTC" => "Ł",
        "DOGE" => "Ð",
        "TRX" => "Ⓣ",
        _ when cryptoCode.StartsWith("USDT") => "🟢",
        _ when cryptoCode.StartsWith("USDC") => "🔵",
        _ when cryptoCode.StartsWith("EUR") || cryptoCode.StartsWith("DEURO") => "🟡",
        _ => "◆"
    };

    string GetProviderDescription(SwapProvidersEnum provider)
    {
        var field = provider.GetType().GetField(provider.ToString());
        var attribute = (System.ComponentModel.DescriptionAttribute)field.GetCustomAttributes(typeof(System.ComponentModel.DescriptionAttribute), false).FirstOrDefault();
        return attribute?.Description ?? provider.ToString();
    }
}
